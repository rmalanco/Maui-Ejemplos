<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Pages.GridSample.ChallengeExtra"
             Title="ChallengeExtra">

    <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*,*">
        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" BackgroundColor="Aqua"  TextColor="Black" Text="0,0" />
        <Button Grid.Column="2" Grid.Row="0" BackgroundColor="Beige" TextColor="Black"  Text="1,0" />
        <Button Grid.Column="2" Grid.Row="1" BackgroundColor="Blue" TextColor="White"  Text="0,1" />
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="1" BackgroundColor="Brown" TextColor="White"  Text="0,2" />
        <Button Grid.Column="2" Grid.Row="2" BackgroundColor="Coral" TextColor="White"  Text="1,2" />
        <Button Grid.Column="0" Grid.Row="3" BackgroundColor="Crimson" TextColor="White"  Text="0,3" />
        <Button Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="1" BackgroundColor="DarkBlue" TextColor="White"  Text="1,3" />
        <Button Grid.Column="0" Grid.Row="4" BackgroundColor="DarkCyan" TextColor="White"  Text="0,4" />
        <Button Grid.Column="1" Grid.Row="4" BackgroundColor="DarkGoldenrod" TextColor="White"  Text="1,4" />
        <Button Grid.Column="2" Grid.Row="4" BackgroundColor="DarkGray" TextColor="White"  Text="2,4" />
        <Button Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="1" BackgroundColor="DarkGreen" TextColor="White"  Text="0,5" />
    </Grid>
</ContentPage>